                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Book Review</a>
            <div class="collapse navbar-collapse">
                <ul class="navi">
                    <li class="search"><a href="#" class="js-header-search-toggle"><i class="fa fa-search"></i></a></li>
                    {% if is_granted('ROLE_USER') %}
                    <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% else %}
                    <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                    {% endif %}
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="{{ path('blogger_index') }}">Index</a></li>
                    <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                    <li><a href="{{ path('blogger_about') }}">About</a></li>
                    <li><a href="{{ path('blogger_blog') }}">Blog</a></li>
                    <li><a href="{{ path('blogger_book') }}">Book</a></li>
                    <li><a href="{{ path('blogger_bookreview') }}">Book Review</a></li>
                    <li><a href="{{ path('easyadmin') }}">Admin</a></li>
                    {% if is_granted('ROLE_USER') %}
                    {#<li><a href="{{ path('book_create') }}">Create Book</a></li>#}
                    {% endif %}
                    {#<li><a href="{{ path('blogger_contact') }}">Contact</a></li>#}
                </ul>
            </div>
        </div>
    </nav>
